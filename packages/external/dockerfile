FROM node:22-alpine AS base
RUN apk update && apk add --no-cache libc6-compat
RUN corepack enable

FROM base AS builder 
WORKDIR /usr/src/app
COPY . .
RUN yarn dlx turbo prune external --out-dir dist --docker

FROM base AS installer
WORKDIR /usr/src/app
COPY --from=builder /usr/src/app/dist/json/ .
RUN yarn install
COPY --from=builder /usr/src/app/dist/full/ .
RUN yarn run build

FROM base AS runner
WORKDIR /usr/src/app

RUN addgroup --system --gid 1001 hello
RUN adduser --system --uid 1001 world
USER world

COPY --from=installer --chown=world:hello /usr/src/app/node_modules ./node_modules
COPY --from=installer --chown=world:hello /usr/src/app/package.json ./package.json
COPY --from=installer --chown=world:hello /usr/src/app/yarn.lock ./yarn.lock

COPY --from=installer --chown=world:hello /usr/src/app/packages/common/dist ./packages/common/dist
COPY --from=installer --chown=world:hello /usr/src/app/packages/common/package.json ./packages/common/package.json

COPY --from=installer --chown=world:hello /usr/src/app/packages/external/dist ./packages/external/dist
COPY --from=installer --chown=world:hello /usr/src/app/packages/external/package.json ./packages/external/package.json

EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

CMD ["node", "packages/external/dist/main.js"]
